
<%- include('layouts/header') %>
<main>
<div class="container my-5">
    <h1 class="mb-4 text-center"><%= title %></h1>

    <form action="/trips/edit/<%= trip._id %>" method="POST">
         <!-- Image -->
         <div class="mb-3">
            <label for="image" class="form-label">Image </label>
            <input type="url" class="form-control" id="image" name="image" value="<%= trip.image %>" required>
        </div>

         <!-- Place/City -->
         <div class="mb-3">
            <label for="placeCity" class="form-label">City</label>
            <input type="text" class="form-control" id="placeCity" name="placeCity" value="<%= trip.placeCity %>" required>
        </div>
        
        <!-- Customer Name -->
        <div class="mb-3">
            <label for="customerName" class="form-label">Name</label>
            <input type="text" class="form-control" id="customerName" name="customerName" value="<%= trip.customerName %>" required>
        </div>

        <!-- Date -->
        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="<%= trip.date %>" required>
        </div>

        <!-- Time -->
        <div class="mb-3">
            <label for="time" class="form-label">Time</label>
            <input type="time" class="form-control" id="time" name="time" value="<%= trip.time %>" required>
        </div>

       

       

        <!-- Submit Button -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Update Trip</button>
            <a href="/trips" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
</main>
<%- include('layouts/footer') %>
